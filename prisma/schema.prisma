generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// The owner (Me ðŸ˜‚)
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Blog schema 
model Blog {
  id              String   @id @default(cuid())
  title           String
  slug            String   @unique
  content         String
  thumbnail       String
  tags            String[]
  metaTitle       String
  metaDescription String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

// Project schema
model Project {
  id            String   @id @default(cuid())
  title         String
  description   String
  features      String[]
  tags          String[]
  thumbnail     String
  liveSite      String
  githubClient  String?
  githubBackend String?
  technologies  String[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("projects")
}

// About Me Schema (Singleton Pattern)
model About {
  id            String   @id @default("singleton")
  heroText      String   @db.Text
  careerSummary String   @db.Text
  interestText  String   @db.Text
  goalText      String   @db.Text
  resumeLink    String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("about")
}
